(section
  (ref "stack_clear")
  (title "stack.clear")
  (para function_desc "Clear elements in stack.")
  (subsection
    (title "synopsis")
    (para-verbatim function_synopsis
"with stack;

procedure clear
  (stack   : in out stack_t);
"))
  (subsection
    (title "description")
    (para
      "The " (item function "clear") " procedure clears all elements in the
      stack referenced by " (item function_param "stack") ".")))
